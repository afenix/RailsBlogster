<h2><%= @post.title %></h2> 
<blockquote><%= @post.body %></blockquote> 
<cite>~<%= @post.author %></cite> 
<h6>Created on <%= @post.created_at.strftime("%b %d, %Y") %></h6>


<%= link_to "Back", posts_path, :class => "btn btn-success btn-sm"%>

<%= link_to "Edit", edit_post_path(@post), :class => "btn btn-warning btn-sm"%>

<%= link_to "Delete", post_path(@post), 
                      :data => {:confirm => "Are you absolutely sure? This action can not be undone.", 
                      :method => "delete"},      
                      :class => "btn btn-danger btn-sm"%>

